//BEGIN popup
.popup#form
  .popup__inner
    button.popup__close(type="button")
      | Закрыть

    //BEGIN form
    form.form#order-form(name="order_form", novalidate)
      strong.title.title_center
        | Форма заказа
      .field
        label.field__label(for="name") Имя<sup>*</sup>
        input.input(type="text", name="name", id="name", required)
      .field
        label.field__label(for="phone") Телефон<sup>*</sup>
        input.input(type="tel", name="phone", id="phone", required)
      .field
        label.field__label(for="email") E-mail
        input.input(type="email", name="email", id="email")
      .field
        label.field__label(for="msg") Сообщение
        textarea.input(name="msg", id="msg")
      .field
        label.agree-wrap
          input.agree-inpt(type="checkbox", name="agree", required)
          span.agree-inner Даю согласие на обработку моих 
            a(href="https://www.masstar.ru/privacy/" target="_blank") персональных&nbsp;данных
      // изменения в скрипте
            $.extend($.validator.messages, {
            required: "Обязательное поле",
            minlength: "Введите минимум 7 цифр",
            email: "Заполните в формате 'name@mail.ru'"
             });
            var validationOptions = {
                debug: true,
                rules: {
                    phone: {
                        minlength: 7
                    },
                    agree: {
                        required: true
                    }
                },
                errorPlacement: function(error, element) {
                    error.insertBefore(element);           
                },
            };
      button.btn.btn_blue.btn_gray.btn_fw(type="submit")
        | Закзать
    //END form

//END popup
